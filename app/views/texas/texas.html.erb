<%= javascript_include_tag 'texas' %>
<div class="other_players_container">
<% @login_users.each do |user| %>
  <% if user.user_id != @my_id then %>
    <div class="other_players">
      <%= user.name %><br>
      <div class="card_ura"></div>
      <div class="card_ura"></div>
      <div class="tip">keep: $<%= user.keep_tip %></div>
      <div class="tip">bet: $<%= user.bet_tip %></div>
    </div>
  <% end %>
<% end %>
</div>

<div class="game_table">
  <% @table_omote.times do |n| %>
    <% case @table_cards[n][2] %>
    <% when "s" then %>
    <div class="card_black"><%= @table_cards[n][0,2].to_i %><br>&spades;</div>
    <% when "c" then %>
    <div class="card_black"><%= @table_cards[n][0,2].to_i %><br>&clubs;</div>
    <% when "h" then %>
    <div class="card_red"><%= @table_cards[n][0,2].to_i %><br>&hearts;</div>
    <% when "d" then %>
    <div class="card_red"><%= @table_cards[n][0,2].to_i %><br>&diams;</div>
    <% end %>
  <% end %>
  <% (5 - @table_omote).times do %>
    <div class="card_ura">　<br>　</div>
  <% end %>
</div>

<div class="my_player">
  <%= @my_name %>（自分）<br>
  <% my_player = @login_users.select{|x| x.user_id == @my_id}[0] %>
  <% my_player.hand.each do |card| %>
    <% case card[2] %>
    <% when "s" then %>
    <div class="card_black"><%= card[0,2].to_i %><br>&spades;</div>
    <% when "c" then %>
    <div class="card_black"><%= card[0,2].to_i %><br>&clubs;</div>
    <% when "h" then %>
    <div class="card_red"><%= card[0,2].to_i %><br>&hearts;</div>
    <% when "d" then %>
    <div class="card_red"><%= card[0,2].to_i %><br>&diams;</div>
    <% end %>
  <% end %>
  <div class="tip">keep: $<%= my_player.keep_tip %></div>
  <div class="tip">bet: $<%= my_player.bet_tip %></div>
</div>


<br>
